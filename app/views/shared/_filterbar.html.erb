<div class="d-flex justify-content-between flex-row-reverse filter-bar">
     <div class="form-inline">
      <%= form_tag rides_path, method: :get do %>
        <div class="form-row">
            <%= text_field_tag :location,
              params[:location,
              class: "form-control",
              placeholder: "City"
            %>
            <%= date_field :date,
              params[:date],
              class: "form-control d-none"
            %>

            <%= select_tag(:time,
              options_for_select(['Morning','Noon','Afternoon']),
              {
              class: "form-control d-none",
              placeholder: "Morning"})
            %>

            <%= text_field_tag :experience,
              params[:experience],
              class: "form-control d-none"
            %>
            <%= submit_tag "Search", class: "searchbtn btn btn-warning d-none", id: "search-btn" %>
        </div>
      <% end %>
     </div>
    <div class="d-flex">
      <div class="mr-5">
        <%= form_tag rides_path, method: :get, class: "" do %>
          <div class="form-row">
              <%= text_field_tag :where,
                params[:where],
                class: "form-control d-none",
                placeholder: "City"
              %>
              <%= date_field :when,
                params[:when],
                class: "filterbord form-control",
                onchange: "this.form.submit();"
              %>
              <%= text_field_tag :experience,
                params[:experience],
                class: "form-control d-none"
              %>
              <%= submit_tag "Search", class: "searchbtn btn btn-warning d-none", id: "search-btn" %>
          </div>
        <% end %>
      </div>

      <div class="mr-5">
        <%= form_tag rides_path, method: :get, class: "" do %>
          <div class="form-row">
              <%= text_field_tag :where,
                params[:where],
                class: "form-control d-none",
                placeholder: "City"
              %>
              <%= date_field :when,
                params[:when],
                class: "filterbord form-control d-none"
              %>

              <%= select_tag(:time,
