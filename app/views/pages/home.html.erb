<div class="banner">
  <div class="container">

    <h1>Find your next ride</h1>
    <p>We recommend the best surf sessions for you.</p>
    <br>
    <div class="search-bar">
      <%= form_tag rides_path, method: :get do %>
        <div class="form-row">
          <div class="col">
            <label>Where ?</label>
            <%= text_field_tag :where,
              params[:where],
              class: "form-control",
              placeholder: "Where"
            %>
          </div>
          <div class="col">
            <label>When ?</label>
            <%= text_field_tag :when,
              params[:when],
              class: "form-control",
              placeholder: "dd/mm/yyyy"
            %>
          </div>
          <div class="col">
            <label>Experience ?</label>
            <%= select_tag(:experience,
              options_for_select(['Rookie','Novice','Pro']),
              {
              class: "form-control",
              placeholder: "Beginner"})
            %>
          </div>
            <%= submit_tag "Search", class: "searchbtn btn btn-warning" %>
        </div>
      <% end %>

    </div>



  </div>
</div>
