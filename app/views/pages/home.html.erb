<div class="banner">
  <div class="container">

    <h1>Find your next ride</h1>
    <p>We recommend the best surf sessions for you.</p>
    <br>
    <div class="search-bar">
      <%= form_tag rides_path, method: :get do %>
        <div class="form-row" >
          <div class="col-md-3">
            <label>Where ?</label>
            <%= text_field_tag :location,
              params[:location],
              class: "form-control",
              placeholder: "City"
            %>
          </div>
          <div class="col-md-3">
            <label>When ?</label>
            <%= date_field :date,
              params[:date],
              class: "form-control",
              placeholder: "dd/mm/yyyy"
            %>
          </div>
          <div class="col-md-2">
            <label>What time ?</label>
            <%= select_tag(:time,
              options_for_select(['Morning','Noon','Afternoon']),
              {
              class: "form-control",
              placeholder: "Morning"})
            %>
          </div>
          <div class="col-md-2">
            <label>Experience ?</label>
            <%= select_tag(:experience,
              options_for_select(['Rookie','Beginner','Advanced', 'Pro']),
              {
              class: "form-control",
              placeholder: "Beginner"})
            %>
          </div>
          <div class="col-md-2">
            <%= submit_tag "Search", class: "searchbtn btn btn-warning", id: "search-btn" %>
          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>
