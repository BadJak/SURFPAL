<div class=<%=["banner1","banner2","banner3","banner4","banner5"].sample%> >
  <div class="container-fluid">

    <div class="search-bar">
      <h1>Find your next ride</h1>
      <p><%=["We recommend the best surf sessions for you.","We help surfers catch the best waves nearby.","Easy surf forecasting for pros and beginners."].sample%></p>
      <%= form_tag rides_path, method: :get do %>
        <div class="form" >
          <label id="label">Where ?</label>
          <%= text_field_tag :location,
            params[:location],
            class: "form-control",
            placeholder: "City"
          %>
          <div class="row">
            <div class="col-md-6">
              <label id="label">When ?</label>
              <%= date_field :date, :date,
                class: "form-control",
                placeholder: "dd/mm/yyyy"
              %>
            </div>
            <div class="col-md-6">
              <label id="label">What time ?</label>
              <%= select_tag(:time,
                options_for_select(['Morning','Noon','Afternoon']),
                {
                class: "form-control",
                placeholder: "Morning"})
              %>
            </div>
          </div>
          <label id="label">Experience ?</label>
          <%= select_tag(:experience,
            options_for_select(['Rookie','Beginner','Advanced', 'Pro']),
            {
            class: "form-control",
            placeholder: "Beginner"})
          %>
          <%= submit_tag "Search", class: "searchbtn btn btn-warning btn-lg", id: "search-btn" %>
          </div>
        </div>
      <% end %>

    </div>

  </div>
</div>
