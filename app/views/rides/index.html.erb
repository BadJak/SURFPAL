<%= render 'shared/filterbar' %>

<div class="content">
  <div class="results">

    <%= link_to  ride_path(@rides.first) do %>
      <div class="first_card">
        <h1><%= @rides&.first&.beach&.name %></h1>
        <h2>Scoring: <%= @rides&.first&.scoring %></h2>
      </div>
    <% end %>

  <div class="cards">
    <% @rides.each_with_index do |ride, index| %>
      <% next if index == 0 %>
        <%= link_to ride_path(ride) do %>
          <div class="card">
            <h2> <%= ride.beach.name %> </h2>
          </div>
          <div class = "row justify-content-between" style="padding: 16px;">
            <h4 class="card-info"> <%= ride.beach.city %> </h4>
            <h4 class="card-info"><%= ride.scoring %> </h4>
          </div>
        <% end %>
    <% end %>

